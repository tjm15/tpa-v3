      "sections": [
        {
          "id": "executive-summary",
          "title": "Executive Summary",
          "required": true,
          "content": "Brief overview of the site assessment findings and recommendations."
        },
        {
          "id": "site-description",
          "title": "Site Description",
          "required": true,
          "content": "Physical characteristics, location, and current use of the site."
        },
        {
          "id": "planning-context",
          "title": "Planning Policy Context",
          "required": true,
          "content": "Relevant local plan policies and national planning guidance."
        },
        {
          "id": "constraints-analysis",
          "title": "Constraints Analysis",
          "required": true,
          "content": "Assessment of physical and policy constraints affecting development."
        },
        {
          "id": "deliverability",
          "title": "Deliverability Assessment",
          "required": true,
          "content": "Viability, infrastructure, and delivery timescales."
        },
        {
          "id": "recommendations",
          "title": "Recommendations",
          "required": true,
          "content": "Conclusions and recommended actions."
        }
      ]
    },
    {
