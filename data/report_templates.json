        {
          "id": "proposal-description",
          "title": "Proposal Description",
          "required": true,
          "content": "Description of the proposed development."
        },
        {
          "id": "site-context",
          "title": "Site and Context",
          "required": true,
          "content": "Site characteristics and surrounding context."
        },
        {
          "id": "policy-assessment",
          "title": "Policy Assessment",
          "required": true,
          "content": "Assessment against relevant planning policies."
        },
        {
